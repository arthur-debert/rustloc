#!/bin/bash
# Pre-commit hook for rustloc
# Run: scripts/pre-commit from project root, or install as .git/hooks/pre-commit

set -e

# Disable incremental compilation to ensure consistent results with CI
# Without this, cached artifacts may cause clippy to miss issues
export CARGO_INCREMENTAL=0

echo "Running pre-commit checks..."

# Format check
echo "Checking formatting..."
cargo fmt --all -- --check

# Clippy
echo "Running clippy..."
cargo clippy --all-targets --all-features -- -D warnings

# Tests
echo "Running tests..."
cargo test --all

echo "All pre-commit checks passed!"
