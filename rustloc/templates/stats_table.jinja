{#- Table template for LOCTable - just iterate and format, no computation -#}
{%- set label_width = 40 -%}
{%- set value_width = 16 -%}
{%- set line_width = label_width + (value_width + 1) * (headers | length - 1) -%}
{% if title %}
{{ title }}

{% endif -%}
[header]{{ headers[0] | col(label_width, align='center') }}{% for h in headers[1:] %} {{ h | col(value_width, align='right') }}{% endfor %}[/header]
{{ "─" * line_width }}
{% for row in rows -%}
{% if loop.index is even %}[row_alt]{{ row.label | col(label_width, truncate='start') }}{% for v in row.values %} {{ v | col(value_width, align='right') }}{% endfor %}[/row_alt]
{% else %}{{ row.label | col(label_width, truncate='start') }}{% for v in row.values %} {{ v | col(value_width, align='right') }}{% endfor %}
{% endif -%}
{% endfor -%}
{%- if rows | length > 0 -%}
{{ "─" * line_width }}
{% endif -%}
{{ footer.label | col(label_width) }}{% for v in footer.values %} {{ v | col(value_width, align='right') }}{% endfor %}
{% if summary %}{{ summary.label | col(label_width) }}{% for v in summary.values %} {{ v }}{% endfor %}
{% endif -%}
{% if legend %}
[muted]{{ legend }}[/muted]
{% endif -%}
